doctype html
html
  head
    title Modificar datos
    meta(charset='utf-8')
    meta(name='viewport', content='height=device-height,initial-scale=1')
    script(type='text/javascript', src='css/bootstrap.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
    link(rel='icon', href='../img/logo.png')
    link(href='https://fonts.googleapis.com/css?family=Montserrat', rel='stylesheet')
    link(rel='stylesheet', type='text/css', href='css/estilos.css')
    link(rel='stylesheet', type='text/css', href='css/snackbar.css')
  body#indexInvitado
    nav.navbar.sticky-top.navbar-expand-md.navbar-light(id='barraNavegacion')
      a.navbar-brand(href='indexUsuario')
        img(src='../img/logo.png', height='25', alt='')
        |  Contrata.me
      button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#contrataNav', aria-controls='contrataNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      .collapse.navbar-collapse#contrataNav
        ul.navbar-nav
          li.navbar-item
            a.nav-link.active(href='indexUsuario') Inicio
        form.form-inline(action='/busqueda', method='POST')
          .dropdown.show
            input#navSearch.form-control.mr-sm-2.dropdown-toggle(aria-expanded='false', aria-haspopup='true', role='searchbox', type='text', autocomplete='off', placeholder='Buscar trabajador', aria-label='Buscar', style='width: 30vw', name='bus')
            .dropdown-menu#resSearch(aria-labelledby='navSearch')
              a.dropdown-item(href='#') 
          button.btn.btn-outline-primary.my-2.my-sm-0(type='submit') Buscar
        ul.navbar-nav.ml-auto
          li.navbar-item
            a.nav-link(href='publicitarUsuario') Publicítate
          li.navbar-item
            a.nav-link.active(href='perfilUsuario') Perfil
            span.sr-only (actual)
          li.navbar-item
            a.nav-link(href='../logout') Salir
    div.d-inline-block.p-5
          form(method="post",action="/subeFoto",enctype="multipart/form-data")
            img.rounded(src=''+rows.img, style='width: 20vw')
            |  
            input.form-control-file.my-2(type='file', style='width: 20vw', name='imagen', accept='image/*')
            .progress.mt-3
              .progress-bar.bg-success(style='width: 80%', aria-valuenow='80', aria-valuemin='0', aria-valuemax='100')
              .progress-bar.bg-danger(style='width: 20%', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
            p.text-dark.text-center 80 de 100 personas
            input.btn.btn-dark.btn-block.btn-lg.mb-2(type='submit', value='Subir imagen')
            .invisible Que tranza, jaja
    div.d-inline-block.mt-4(style='width: 60vw')
        .rounded.border.border-dark.mb-2.p-2(style='height: 70vh')
          h5!= rows.nombre+' '+rows.apellido
          hr
          form(id='formDat')
            .row
              .col-3 Email
              .col
                input.form-control(type='email', id='mail', style='width: 100%', placeholder=''+rows.mail)
            .row(style='height: 1vh')
            .row
              .col-3 Contraseña
              .col
                input.form-control(type='password', id='pass', style='width: 100%')
            .row(style='height: 1vh')
            .row
              .col-3 Nombre
              .col
                input.form-control(type='text', id='nombre', style='width: 100%', placeholder=''+rows.nombre)
            .row(style='height: 1vh')
            .row
              .col-3 Apellidos
              .col
                input.form-control(type='text', id='apellidos', style='width: 100%', placeholder=''+rows.apellido)
            .row(style='height: 1vh')
            .row
              .col-3 Direccion
              .col
                input.form-control(type='text', id='direccion', style='width: 100%', placeholder=''+rows.direccion)
            .row(style='height: 1vh')
            .row
              .col-3 Numero interior
              .col
                input.form-control(type='text', id='noInt', style='width: 100%', placeholder=''+rows.num_int)
            .row(style='height: 1vh')
            .row
              .col#button1
                input.btn.btn-outline-dark#actualizaDatos(type='button', value='Guardar', name='regis-submit')
    div#snackbar
    script(src='https://code.jquery.com/jquery-3.2.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js', integrity='sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js', integrity='sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1', crossorigin='anonymous')
    script(src='../js/barraBusqueda.js')
